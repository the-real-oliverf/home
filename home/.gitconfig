[user]
  name = Oliver Fisher
  email = oliverf@shopify.com
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[merge]
  tool = vimdiff
  conflictStyle = diff3
[core]
  # Use $EDITOR
	# editor = atom --wait
[interactive]
  singlekey = true
[push]
  default = current
[pull]
  default = current
  rebase = true
[hub]
  protocol = ssh
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[alias]
	rbg = !git rebase `./script/ci_last_green_master`
	brg = !sh -c 'git checkout -b $1 `./script/ci_last_green_master`' -
  cr = !arc diff && git push origin
  amend = commit --amend -C HEAD
